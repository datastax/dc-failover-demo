{
  "variables": {
    "region1": "us-east-1",
    "region2": "us-west-2"
  },
  "builders": [{
    "name": "cassandra",
    "type": "amazon-ebs",
    "region": "{{user `region1`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "m5.2xlarge",
    "ssh_username": "ubuntu",
    "ami_name": "cassandra-image {{timestamp}}",
    "ami_regions": ["{{user `region1`}}", "{{user `region2`}}"]
  },{
    "name": "web",
    "type": "amazon-ebs",
    "region": "{{user `region1`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "m5.large",
    "ssh_username": "ubuntu",
    "ami_name": "demo-web-image {{timestamp}}",
    "ami_regions": ["{{user `region1`}}", "{{user `region2`}}"]
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": "/usr/bin/cloud-init status --wait"
    },
    {
      "only": ["cassandra"],
      "type": "file",
      "source": "./packer/scripts/cassandra/cassandra.yaml",
      "destination": "/home/ubuntu/"
    },
    {
      "only": ["cassandra"],
      "type": "file",
      "source": "./packer/scripts/cassandra/generate_config.sh",
      "destination": "/home/ubuntu/"
    },
    {
      "only": ["cassandra"],
      "type": "file",
      "source": "./packer/scripts/cassandra/wait_for_cassandra.sh",
      "destination": "/home/ubuntu/"
    },
    {
      "only": ["cassandra"],
      "type": "shell",
      "inline": "chmod +x *.sh"
    },
    {
      "only": ["cassandra"],
      "type": "shell",
      "script": "./packer/scripts/cassandra/download_install.sh"
    },
    {
      "only": ["web"],
      "type": "shell",
      "script": "./packer/scripts/web/install_web.sh"
    }
  ]
}